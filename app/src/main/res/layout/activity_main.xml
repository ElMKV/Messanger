<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/MainLiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/image_24"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:background="@drawable/image_24"
            android:foregroundGravity="center" />


        <TextView
            android:id="@+id/some_id"
            android:layout_width="132dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:fontFamily="Roboto"
            android:gravity="center_horizontal|top"
            android:text="Быстрый"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/active_"
            android:layout_width="348dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="34dp"
            android:fontFamily="Roboto"
            android:gravity="center_horizontal|top"
            android:text="Active доставляет сообщения быстрее любого другого мессенджера"
            android:textColor="#80000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Rectangle 74 -->
            <View
                android:id="@+id/rectangle_7"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rectangle_74" />


            <!-- drawable/rectangle_7.xml -->


            <!-- Rectangle 77 -->
            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/rectangle_74" />


            <!-- drawable/rectangle_7.xml -->


            <!-- Rectangle 76 -->
            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/rectangle_74"
                android:backgroundTint="#469BFC" />


            <!-- drawable/rectangle_7.xml -->


            <!-- Rectangle 75 -->
            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/rectangle_74" />


            <!-- drawable/rectangle_7.xml -->

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="119dp"
            android:background="@drawable/rectangle_1"
            android:fontFamily="Roboto"
            android:text="Начать общаться"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>