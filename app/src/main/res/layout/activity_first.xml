<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/MainLiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout

            android:id="@+id/LogoAndTextLiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="98dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="186dp"

                android:layout_height="186dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:foregroundGravity="center"
                app:srcCompat="@mipmap/logofirstactivity" />

            <TextView
                android:id="@+id/ActiveView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:paddingTop="28dp"
                android:text="Active"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/some_id"
                android:layout_width="326dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="28dp"

                android:gravity="center_horizontal|top"
                android:text="Самый выгодный, быстрый и безопасный мессенджер в мире"
                android:textColor="#80000000"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/DotsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:id="@+id/DotsOne"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/rectangle_7"
                    android:backgroundTint="#469BFC" />


                <!-- drawable/rectangle_7.xml -->


                <!-- Rectangle 77 -->
                <View
                    android:id="@+id/DotsTwo"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/rectangle_7" />


                <!-- drawable/rectangle_7.xml -->


                <!-- Rectangle 76 -->

                <View
                    android:id="@+id/DotsThree"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/rectangle_7" />


                <!-- drawable/rectangle_7.xml -->


                <!-- Rectangle 75 -->
                <View
                    android:id="@+id/DotsFour"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/rectangle_7" />


                <!-- drawable/rectangle_7.xml -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="119dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_1"
                    android:text="Начать общаться"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


            <!-- drawable/rectangle_1.xml -->


